<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hh.myeonmok.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">


        <ImageView
            android:id="@+id/imgvEvent_cm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0.5dp"
            android:layout_marginLeft="1.5dp"
            android:layout_weight="0.3"
            android:scaleType="fitXY"
            android:src="@drawable/banner" />

        <LinearLayout
            android:id="@+id/ll_btnGroup1_cm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="0.35"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgbtnStoreInfo_cm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/main_btn1"
                android:text="시장소개" />

            <ImageButton
                android:id="@+id/imgbtnWay_cm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/main_btn2"
                android:text="오시는길" />

            <ImageButton
                android:id="@+id/imgbtnEvent_cm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/main_btn3"
                android:text="이벤트" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btnGroup2_cm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="0.35"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgbtnFood_cm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/main_btn4"
                android:text="음식점" />

            <ImageButton
                android:id="@+id/imgbtnClothes_cm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/main_btn5"
                android:text="의류" />

            <ImageButton
                android:id="@+id/imgbtnVegetable_cm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/main_btn6"
                android:text="야채" />
        </LinearLayout>

        <!--  -->
        <LinearLayout
            android:id="@+id/ll_bottom_menu_cm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:background="@drawable/bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnHome_main"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/btnPrev_main"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/btnNext_main"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/btnRefresh_main"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/btnSearch_main"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:background="@android:color/transparent" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
